{
  "name": "iltio",
  "description": "Authentication for the Web and Mobile.",
  "version": "1.0.0",
  "repository": "github:tobua/iltio",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "app": "bun create-native-app.js",
    "app:copy": "cpx 'dist/**/*' app/node_modules/iltio/dist --watch",
    "build": "padua build",
    "start": "padua watch",
    "test": "vitest run"
  },
  "padua": {
    "esbuild": {
      "external": [
        "iltio"
      ]
    },
    "entry": [
      "index.tsx",
      "react/Authentication.tsx",
      "native/index.tsx",
      "next.tsx",
      "frameworks/base/Authentication.tsx"
    ]
  },
  "dependencies": {
    "cookie": "^1.0.2",
    "cookies-next": "^6.1.0",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.15.0",
    "@react-native-community/cli": "^19.1.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cookie": "^1.0.0",
    "@types/styled-components": "^5.1.34",
    "cpx": "^1.5.0",
    "happy-dom": "^18.0.1",
    "next": "^15.4.5",
    "padua": "^4.0.1",
    "prettier-plugin-svelte": "^3.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-native": "^0.80.2",
    "styled-components": "^6.1.19",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@builder.io/qwik": ">= 0.100",
    "next": ">= 13",
    "react": ">= 18.0",
    "react-native": ">= 0.69",
    "react-native-localize": "^3.5.1"
  },
  "peerDependenciesMeta": {
    "@builder.io/qwik": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-native": {
      "optional": true
    },
    "react-native-localize": {
      "optional": true
    }
  },
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react/Authentication.d.ts",
        "default": "./dist/react/Authentication.js"
      },
      "default": {
        "types": "./dist/react/Authentication.d.ts",
        "default": "./dist/react/Authentication.js"
      }
    },
    "./dist/native/index.js": "./dist/native/index.js",
    "./native": {
      "default": {
        "types": "./dist/native/index.d.ts",
        "default": "./dist/native/index.js"
      }
    },
    "./next": {
      "default": {
        "types": "./dist/next.d.ts",
        "default": "./dist/next.js"
      }
    },
    "./vue": {
      "default": {
        "default": "./frameworks/vue/Authentication.vue"
      }
    },
    "./svelte": {
      "default": {
        "default": "./frameworks/svelte/Authentication.svelte"
      }
    },
    "./base": {
      "default": {
        "types": "./dist/frameworks/base/Authentication.d.ts",
        "default": "./dist/frameworks/base/Authentication.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "frameworks"
  ],
  "keywords": [
    "authentication",
    "authorization",
    "form",
    "login",
    "registration",
    "token"
  ],
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "stylelint": {
    "extends": "padua/configuration/stylelint.cjs"
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 18"
  }
}
