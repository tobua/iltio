{
  "name": "iltio",
  "description": "Authentication for the Web and Mobile.",
  "version": "1.0.0",
  "repository": "github:tobua/iltio",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "app": "node create-native-app.js",
    "app:copy": "cpx 'dist/**/*' app/node_modules/iltio/dist --watch",
    "build": "padua build",
    "start": "padua watch",
    "test": "vitest run"
  },
  "padua": {
    "esbuild": {
      "external": [
        "iltio"
      ]
    },
    "entry": [
      "index.tsx",
      "react/Authentication.tsx",
      "native/index.tsx",
      "next.tsx",
      "frameworks/base/Authentication.tsx"
    ]
  },
  "dependencies": {
    "cookie": "^0.5.0",
    "cookies-next": "^3.0.0",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.2.10",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/cookie": "^0.5.1",
    "@types/styled-components": "^5.1.26",
    "cpx": "^1.5.0",
    "happy-dom": "^10.11.2",
    "next": "^13.4.19",
    "padua": "^2.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "^0.72.4",
    "styled-components": "^6.0.7",
    "vitest": "^0.34.3"
  },
  "peerDependencies": {
    "@builder.io/qwik": ">= 0.100",
    "next": ">= 13",
    "react": ">= 18.0",
    "react-native": ">= 0.69",
    "react-native-localize": ">= 2"
  },
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react/Authentication.d.ts",
        "default": "./dist/react/Authentication.js"
      },
      "default": {
        "types": "./dist/react/Authentication.d.ts",
        "default": "./dist/react/Authentication.js"
      }
    },
    "./dist/native/index.js": "./dist/native/index.js",
    "./native": {
      "default": {
        "types": "./dist/native/index.d.ts",
        "default": "./dist/native/index.js"
      }
    },
    "./next": {
      "default": {
        "types": "./dist/next.d.ts",
        "default": "./dist/next.js"
      }
    },
    "./vue": {
      "default": {
        "default": "./frameworks/vue/Authentication.vue"
      }
    },
    "./svelte": {
      "default": {
        "default": "./frameworks/svelte/Authentication.svelte"
      }
    },
    "./base": {
      "default": {
        "types": "./dist/frameworks/base/Authentication.d.ts",
        "default": "./dist/frameworks/base/Authentication.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "frameworks"
  ],
  "keywords": [
    "authentication",
    "authorization",
    "form",
    "login",
    "registration",
    "token"
  ],
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "stylelint": {
    "extends": "padua/configuration/stylelint.cjs"
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 16"
  }
}
