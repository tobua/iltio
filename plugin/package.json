{
  "name": "iltio",
  "description": "Authentication for the Web and Mobile.",
  "version": "1.0.0",
  "repository": "github:tobua/iltio",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "app": "node create-native-app.js",
    "app:copy": "cpx 'dist/**/*' app/node_modules/iltio/dist --watch",
    "build": "padua build",
    "start": "padua watch",
    "test": "vitest run"
  },
  "padua": {
    "tsconfig": {
      "compilerOptions": {
        "target": "esnext"
      }
    },
    "entry": [
      "index.tsx",
      "native/index.tsx",
      "next.tsx"
    ]
  },
  "dependencies": {
    "cookie": "^0.5.0",
    "cookies-next": "^2.1.1",
    "url-join": "^5.0.0"
  },
  "peerDependencies": {
    "@builder.io/qwik": ">= 0.100",
    "next": ">= 13",
    "react": ">= 18.0",
    "react-native": ">= 0.69",
    "react-native-localize": ">= 2"
  },
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json",
    "./dist/native/index.js": "./dist/native/index.js",
    "./native": "./dist/native/index.js",
    "./next": "./dist/next.js",
    "./solid": "./frameworks/solid/Authentication.jsx",
    "./vue": "./frameworks/vue/Authentication.vue",
    "./svelte": "./frameworks/svelte/Authentication.svelte",
    "./qwik": "./frameworks/qwik/Authentication.jsx",
    "./base": "./frameworks/base/Authentication.jsx"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "frameworks"
  ],
  "keywords": [
    "authentication",
    "authorization",
    "form",
    "login",
    "registration",
    "token"
  ],
  "devDependencies": {
    "@builder.io/qwik": "^1.1.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/cookie": "^0.5.1",
    "@types/styled-components": "^5.1.26",
    "cpx": "^1.5.0",
    "happy-dom": "^9.16.0",
    "next": "^13.4.2",
    "padua": "^1.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "^0.71.8",
    "styled-components": "^5.3.10",
    "vitest": "^0.31.0"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "stylelint": {
    "extends": "padua/configuration/stylelint.cjs"
  },
  "engines": {
    "node": ">= 16"
  }
}
